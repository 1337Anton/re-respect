{

  "manifest_version": 2,
  "name": "re:respect",
  "version": "1.2",

  "description": "An Firefox-Extension for searching and classifying illegal user content.",

  "icons": {
    "48": "icons/first_logo.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*/status/*"],
      "js": ["main.js"]
    },
    {
      "matches": ["https://tickets.demokratiezentrum-bw.de/open.php"],
      "js": ["test.js"]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/first_logo.png"
    },
    "default_title": "re:respect"
  }
}
