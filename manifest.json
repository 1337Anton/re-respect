{

  "manifest_version": 2,
  "name": "re:respect",
  "version": "1.1",

  "description": "An Firefox-Extension for searching and classifying illegal user content.",

  "icons": {
    "48": "icons/first_logo.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*/status/*"],
      "js": ["main.js"]
    }
    
  ],

  "browser_action": {
    "default_icon": {
      "19": "icons/first_logo.png"
    },
    "default_title": "re:respect - Diesen Tweet melden"
  }
}
